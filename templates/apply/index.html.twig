<!DOCTYPE html>

<title>Apply index</title>

{% block body %}
    <h1>Apply index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hired</th>
                <th>Confirmed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apply in applies %}
            <tr>
                <td>{{ apply.id }}</td>
                <td>{{ apply.hired ? 'Yes' : 'No' }}</td>
                <td>{{ apply.confirmed ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('apply_show', {'id': apply.id}) }}">show</a>
                    <a href="{{ path('apply_edit', {'id': apply.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('apply_new') }}">Create new</a>
{% endblock %}
