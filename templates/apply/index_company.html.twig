
{% extends 'base-company.html.twig' %}

{% block title %} {{ parent() }} - offers {% endblock %}

{% block body %}

<div class="example-wrapper">

    <h1> Liste des Postulations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Location</th>
                <th>Domain</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        {% for offer in offers %}
        <tbody>
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.title }}</td>
                <td>{{ offer.location }}</td>
                <td>{{ offer.domain }}</td>
                <td>{{ offer.description }}</td>
                <td>
                    <a href="{{ path('offers_show', {'id': offer.id}) }}">show</a>
                </td>
            </tr> 
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
{% endfor %}
    </tbody>
</table>
    
{% endblock %}
