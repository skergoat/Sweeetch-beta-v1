{% extends 'base-company.html.twig' %} 

{% block title %} {{ parent() }} - offers {% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
               {# <h1 class="m-0 titles-front">{{ offers.title }}</h1> <br> #}
                <div>
                    {# <a href="{{ path('student_apply', {id:student.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                        <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                        Revenir 
                    </a> #}
                </div>
            </div>
        </div>
    </div> <br>
    
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    
    <div class="col-md-12">
        <div class="card-responsive card">
    
            <div class="Password card col-lg-12">
    
                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Détail de l'Offre</h3>
                </div>
    
                <div class="card-responsive card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Email</th>
                                <td>{{ student.user.email }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ student.name }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ student.lastname }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ student.adress }}, {{ student.zipCode }}, {{ student.city }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone</th>
                                <td>{{ student.telNumber }}</td>
                            </tr>
                            <tr>
                                <th>Permis B</th>
                                <td>{% if student.drivingLicense == 1 %} oui {% else %} non {% endif %} </td>
                            </tr>
                            <tr>
                                <th>Handicap</th>
                                <td>{% if student.disabled == 1 %} oui {% else %} non {% endif %} </td>   
                            </tr>
                        </tbody>
                    </table>
                    
                </div>

                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Langues</h3>
                </div>

                <div class="card-responsive card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Domaine d'activité</th>
                                <td>{{ student.profile.domain }}</td>
                            </tr>
                            <tr>
                                <th>Région recherchée</th>
                                <td>{{ student.profile.area }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Formation</h3>
                </div>

                <div class="card-responsive card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Titre</strong></td>
                                <td><strong>Ecole</strong></td>
                                <td><strong>Début</strong></td>
                                <td><strong>Fin</strong></td>
                            </tr>
                            {% for education in student.profile.education %}
                            <tr>
                                <td>{{ education.title }}</td>
                                <td>{{ education.school }}</td>
                                <td>{{ education.dateStart|date("m/d/Y") }}</td>
                                {% if education.current == true %}
                                  <td>  en cours </td>
                                {% else %}
                                    <td>{{ education.dateEnd|date("m/d/Y") }}</td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Documents</h3>
                </div>
    
                <div class="card-responsive card-body">
                
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>CV</strong></td>
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        <a href="{{ path('student_download_resume', { id: student.resume.id }) }}"><span class="fa fa-download">{{ student.resume.originalFilename }}</span></a>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
    </div>

{% endblock %}

