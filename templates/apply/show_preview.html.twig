{% extends 'base-company.html.twig' %}

{% block title %} {{ parent() }} - students {% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <h1 class="m-0 titles-front">{{ offers.title }}</h1> <br>
            {# <a href="{{ path('offers_edit', {'id': offers.id, 'company':company.id}) }}" class="btn btn-light">edit</a> #}
            <a href="{{ path('offers_company_index', {id:offers.company.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                Revenir 
            </a>
        </div>
    </div>
</div> <br>

{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %}

<div class="col-md-12">
    <div class="card-responsive card">

        <div class="Password card col-lg-12">

            <div class="col-lg-12">
                <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Détail de l'Offre</h3>
            </div>

            <div class="card-responsive card-body">
                <table class="table offers-show col-lg-5 col-md-5 col-sm-12 col-xs-12">
                    <tbody>
                        <tr>
                            <th>Lieu</th>
                            <td>{{ offers.location }}</td>
                        </tr>
                        <tr>
                            <th>Domaine</th>
                            <td>{{ offers.domain }}</td>
                        </tr>
                        <tr>
                            <th>Du</th>
                            <td>{{ offers.dateStart ? offers.dateStart|date('d-m-Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Au</th>
                            <td>{{ offers.dateEnd ? offers.dateEnd|date('d-m-Y') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="card description" style="padding:10px;">
                    <h5 class="mb-3">Description</h5>
                    <p>{{ offers.description |raw }}</p>
                </div>
                
            </div>

            <div class="col-lg-12">
            {% if applies[0] is defined %}
                {% if applies[0].confirmed == true %}  
                 <h3 class="mb-3 mt-3 ml-1 titles-front">Embauche</h3>
                 {% else %}
                 <h3 class="mb-3 mt-3 ml-1 titles-front">Postulations</h3>
                {% endif %}
            {% else %}
                <h3 class="mb-3 mt-3 ml-1 titles-front">Postulations</h3>
            {% endif %}
            </div>

            <div class="card-responsive card-body">
            
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <th>Action</th>
                        </tr>
                    
                    {% if applies[0] is defined %}

                        {% for applies in applies %}
                        
                        <tr>
                            {% if is_granted('ROLE_ADMIN') %}
                            <td style="padding-top: 18px;"><a href="{{ path('student_show', { "id":applies.student.id }) }}">{{ applies.student.name }} {{ applies.student.lastname }}</a></td>
                            {% else %}
                            <td style="padding-top: 18px;"><a href="{{ path('show_applied_profile', { "id":applies.student.id, "company_id": offers.company.id }) }}">{{ applies.student.name }} {{ applies.student.lastname }}</a></td>
                            {% endif %}
                            <td style="color:white;">

                            {% if applies.hired == false and applies.confirmed == false and applies.agree == false %}

                                <div class="btn-group">
                                    <form method="post" action="{{ path('hire', { id:applies.id }) }}" class="btn-icon-form">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offers.id) }}">
                                        <button class="btn-icon btn-success"><i class="fas fa-user-check" title="Embaucher"></i></button>
                                    </form>

                                    <form method="post" action="{{ path('apply_refuse', {'id': applies.id, 'from' : 'company'}) }}" class="btn-icon-form" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ applies.id) }}">
                                        <button class="btn-icon btn-danger">
                                            <i class="fas fa-times" title="Refuser"></i>
                                        </button>
                                    </form>
                                </div>

                            {% elseif applies.hired == true %}

                                <div class="apply-message-red">Avant d'aller plus loin, l'étudiant doit accepter votre embauche</div>

                            {% elseif applies.agree == true %}

                            <form method="post" action="{{ path('confirm', { id:applies.id }) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offers.id) }}">
                                <button class="btn btn-success">Confirmer</button>
                            </form>

                            {% elseif applies.confirmed == true %}

                            <form method="post" action="{{ path('apply_finish', {'id': applies.id }) }}" onsubmit="return confirm('Are you sure you want to finish this mission ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ applies.id) }}">
                                <button class="btn btn-warning">Finish</button>
                            </form>

                            {% endif %}

                            </td>
                        </tr>
                    
                        {% endfor %}

                    {% else %}

                    <tr class="border-top">
                        <td colspan="8" class="border-top-td">Aucune postulation en cours</td>
                    </tr>    
                    
                    {% endif %}

                    </tbody>
                </table>

         

            {# {% if finished is not empty %}

            <h3>Finished</h3>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Profile</th>
                    </tr>

                {% for finished in finished %} 
                
                    {% if finished.student.id is defined %}

                    <tr>
                        <td>{{ finished.student.id }}</td>
                        <td>{{ finished.student.name }}</td>
                        <td>{{ finished.student.lastname }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{ path('student_show', { "id":finished.student.id }) }}">show</a></td>
                        {% else %}
                        <td><a href="{{ path('show_applied_profile', { "id":finished.student.id, "company_id": offers.company.id }) }}">show</a></td>
                        {% endif %}
                    </tr>

                    {% else %}

                    <tr>
                        <th style="color:red;">Student profile deleted</th>
                        <th></th>
                        <th></th>
                        <th>
                            <form method="post" action="{{ path('delete_empty_companySide', {'id': offers.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offers.id) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </th>
                    </tr>

                        {% endif %}
                        
                    {% endfor %}

                </tbody>
            </table>
            
            {% endif %} #}
            </div>
        </div>
    </div>
</div>


{% endblock %}
