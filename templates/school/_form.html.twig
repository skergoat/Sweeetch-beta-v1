{{ form_start(form) }}
    
    <div class="row form-center--signin">

        <div class="col-lg-5 col-sm-12 margin-right">
            <div class="row">
                <div class="col-lg-12 form-group">
                    {{ form_row(form.companyName, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="col-lg-12 form-group">
                    {{ form_row(form.siret, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_row(form.firstname, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_row(form.lastname, {'attr' : { class: 'form-control' }} ) }}
                </div>  
            </div>
            <div class="row" style="margin-top:30px;">
                <div class="col-lg-12 form-group">
                    {{ form_row(form.address, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_row(form.zipCode, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="col-lg-6 form-group">
                    {{ form_row(form.city, {'attr' : { class: 'form-control' }} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 form-group">
                    {{ form_row(form.telNumber, {'attr' : { class: 'form-control' }} ) }}
                </div> 
            </div>
        </div>

        <div class="col-lg-5 col-md-12 col-sm-12 margin-left">
            <!-- <div class="row"> -->
                <div class="form-group">
                    {{ form_row(form.user.email, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="form-group">
                {{ form_row(form.user.password.first, {'attr' : { class: 'form-control' }} ) }}
                </div>
                <div class="form-group">
                {{ form_row(form.user.password.second, {'attr' : { class: 'form-control' }} ) }} 
                </div> 
            <!-- </div> -->
            <div class="row">
                <div class="col-lg-12 col-lg-button" style="margin-top:30px;">
                    <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
                </div>
            </div>
        </div>

    </div>

{{ form_end(form) }}