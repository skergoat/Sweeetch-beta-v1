<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sweeetch{% endblock %}</title>

        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="" name="keywords">
        <meta content="" name="@">

        <!-- Favicons -->
        <link href="{{ asset('build/favicon.png') }}" rel="icon">
        <link href="{{ asset('build/apple-touch-icon.png') }}" rel="apple-touch-icon">

        {% block stylesheets %}
        
            <!-- Google Fonts -->
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,600,700,700i|Montserrat:300,400,500,600,700" rel="stylesheet">
      
            <!-- bootstrap and custom styles -->    
            {{ encore_entry_link_tags('company') }}
 
        {% endblock %}

    </head>
    <body>
        <!-- back nav temporary -->
        <nav class="navbar navbar-expand-lg navbar-primary bg-primary">
            <a class="navbar-brand" href="/">Sweeetch - Company</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"> 
                    
                    {% if offer is defined %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('company_show', {'id' : offer.company.id }) }}">Dashboard</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('company_edit', {'id' : offer.company.id }) }}">Mes Infos</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('offers_company_index', {id:offer.company.id}) }}">Emplois</a>
                    </li>
                    {% else %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('company_show', {'id' : company.id }) }}">Dashboard</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('company_edit', {'id' : company.id }) }}">Mes Infos</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('offers_company_index', {id:company.id}) }}">Emplois</a>
                    </li>
                    {% endif %}

                    <li class="nav-item active">
                        <a class="nav-link" href="/logout">Deconnexion</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item active" >
                        <a class="nav-link" href="{{ path('admin') }}"> // Admin</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('company_index') }}">Liste</a>
                    </li>
                    {% endif %}
                </ul>
                <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>

        <!-- content block -->
        <div class="container">{% block body %}{% endblock %}</div>

        <!-- scripts -->
        {% block javascripts %}
            {{ encore_entry_script_tags('company') }}
        {% endblock %}

    </body>
</html>
