{% extends 'base-front.html.twig' %}

{% block title %} {{ parent() }} - Formations {% endblock %}

{% block body %}

    {% if is_granted('ROLE_SUPER_SCHOOL') or is_granted('ROLE_STUDENT_HIRED') %}

    <div class="background-jobs">

        <div class="container-fluid container-jobs">

            <header id="header">

                {# <div id="topbar">
                <div class="container">
                    <div class="social-links">
                    <a href="https://twitter.com/SweeetchA" target="_blank" class="twitter"><i class="fa fa-twitter"></i></a>
                    <a href="https://www.facebook.com/sweeetch.ton.alternance/" target="_blank" class="facebook"><i class="fa fa-facebook"></i></a>
                    <a href="https://fr.linkedin.com/company/sweetchmontpellier?trk=public_profile_topcard_current_company" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i></a>
                    <a href="https://www.instagram.com/sweeetch_alternance/" target="_blank" class="instagram"><i class="fa fa-instagram"></i></a>
                    </div>
                </div>
                </div>#}
            
                <div class="container nav-desktop">
            
                    <nav class="nav-jobs main-nav d-none d-lg-block">
                        <ul>
                            <li><a href="{{ path('homepage') }}">Accueil</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                {% if from == 'student' %}
                                <li><a href="{{ path('school_student_index', {'id':id}) }}">Retour</a></li>
                                {% elseif from == 'school' %}
                                <li><a href="{{ path('school_studies_index', {'id': id}) }}">Retour</a></li>
                                {% endif %}
                            {% elseif  is_granted('ROLE_STUDENT_HIRED') %}
                            <li><a href="{{ path('school_student_index', {'id': app.user.student.id}) }}">Retour</a></li>
                            {% elseif  is_granted('ROLE_SUPER_SCHOOL') %}
                            <li><a href="{{ path('school_studies_index', {'id': app.user.school.id}) }}">Retour</a></li>
                            {% endif %}
                        </ul>
                    </nav>
                
                </div>
            </header>

            <div class="jobs-container">

                <h1>Formations disponibles</h1>

                {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
                {% endfor %}

                <div class="pagination-top">{{ knp_pagination_render(studies) }}</div>

                <div class="row">

                    {% for studies in studies %}

                    <div class="offers-index card col-lg-5 mr-2 ml-2 mt-2 mb-2">
                        <a  href="{{ path('studies_show_recruit', {id:studies.id, from:from, from_id:id}) }}" class="card-link">
                           
                            <div class="card-body">
                                <div class="card-text"> 
                                    <div style="margin-right:20px;">
                                        <h3>{{ studies.title }}</h3>
                                    </div> 
                                    <div><h5 class="card-subtitle mb-2 text-muted">{{ studies.domain }}</h5></div>
                                </div>
                            </div>
                        </a>
                    </div>

                    {% else %}
           
                    <tr>
                        <td colspan="8">
                            
                            <div class="info-box mb-3" style="border:1px solid rgba(0, 0, 0, 0.125);border-radius:5px;margin-top:100px;">
                                <span class="info-box-icon bg-warning elevation-1"><i class="fa fa-info"></i></span>
                
                                <div class="info-box-content">
                                    <span class="info-box-number">Aucune formation pour le moment</span>
                                    <span class="info-box-text">Revenez plus tard !</span>
                                </div>
                            </div>

                        </td>
                    </tr>

                    {% endfor %}
                </div>

                <div class="pagination-bottom">{{ knp_pagination_render(studies) }}</div> 

            </div>
        </div>
    </div>

    <footer id="footer" class="section-bg">
        <div class="container">
            <div class="copyright">
            &copy; Copyright <strong>SWEEETCH</strong>. All Rights Reserved
            </div>
            <div class="credits">
            L'Ã©quipe de SWEEETCH
            </div>
        </div>
    </footer>

    {% endif %}

{% endblock %}


