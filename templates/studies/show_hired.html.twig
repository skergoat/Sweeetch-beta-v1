{% extends 'base-student.html.twig' %} 

{% block title %} {{ parent() }} - Ecoles {% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                {# <h1 class="m-0 titles-front">{{ offers.title }}</h1> <br>#}
                <div>
                    {# {% if offers.applies[0] is defined %}
                        {% if offers.applies[0].finished == false %}
                        <a href="{{ path('student_apply', {id:student.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                            <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                            Revenir 
                        </a>
                        {% else %}
                        <a href="{{ path('student_finished', {id:student.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                            <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                            Revenir 
                        </a>
                        {% endif %}
                    {% else %}
                    <a href="{{ path('student_apply', {id:student.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                        <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                        Revenir 
                    </a>
                    {% endif %}#}
                    <a href="{{ path('school_student_index', {id:student.id}) }}" class="btn btn-sm btn-sm-1 btn-labeled btn-default">
                        <span class="btn-label"><i class="fa fa-chevron-left"></i></span>
                        Revenir 
                    </a>
                </div>
            </div>
        </div>
    </div> <br>
    
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    
    <div class="col-md-12">
        <div class="card-responsive card">
    
            <div class="Password col-lg-12">
    
                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Détail du Cursus</h3>
                </div>
    
                <div class="card-responsive card-body">
                    <table class="table offers-show col-lg-5 col-md-5 col-sm-12 col-xs-12">
                        <tbody>
                            <tr>
                                <th>Entreprise</th>
                                <td style="display:flex;">
                                   {# {% if studies.company.pictures.fileName is defined %}
                                    <div class="image" style="margin-right:15px;">
                                        <img src="{{ uploaded_asset(offers.company.pictures.fileName) }}" class="profile_picture elevation-2" alt="User Image">
                                    </div>
                                    {% else %}
                                    <div style="margin-right:15px;">
                                        <img src="https://via.placeholder.com/30" />                        
                                    </div>
                                    {% endif %}#}
                                     {{ studies.school.companyName }}
                                </td>
                            </tr>
                            <tr>
                                <th>Location</th>
                                <td>{{ studies.title }}</td>
                            </tr>
                            <tr>
                                <th>Location</th>
                                <td>{{ studies.domain }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="card description" style="padding:10px;">
                        <h5 class="mb-3">Description</h5>
                        <p>{{ studies.description |raw }}</p>
                    </div>
                    
                </div>

                <div class="col-lg-12">
                    <h3 class="mb-3 mt-3 pl-3-responsive titles-front">Profil de l'Ecole</h3>
                </div>
    
                <div class="card-responsive card-body" style="max-width:100%;overflow:scroll;">
                
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Entreprise</th>
                                <td>{{ studies.school.companyName }}</td>
                            </tr>
                            <tr>
                                <th>Responsable</th>
                                <td>{{ studies.school.firstname }} {{ studies.school.lastname }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ studies.school.address }}</td>
                            </tr>
                            <tr>
                                <th>Code Postal</th>
                                <td>{{ studies.school.zipCode }}</td>
                            </tr>
                            <tr>
                                <th>Ville</th>
                                <td>{{ studies.school.city }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone</th>
                                <td>{{studies.school.telNumber }}</td>
                            </tr>
                            <tr>
                                <th>Siret</th>
                                <td>{{ studies.school.siret }}</td>
                            </tr>
    
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
    </div>

{% endblock %}