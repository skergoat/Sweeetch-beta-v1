{% extends 'base-school.html.twig' %}

{% block title %} {{ parent() }} - Ecoles {% endblock %}

{% block body %}

{# {% if is_granted('ROLE_SUPER_SCHOOL') %} #}

{% if is_granted('ROLE_SUPER_ADMIN') %} 

<br>
    <h1>Studies index</h1>
<br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for study in studies %}
            <tr>
                <td>{{ study.id }}</td>
                <td>{{ study.title }}</td>
                <td>{{ study.Description }}</td>
                <td>
                    <a href="{{ path('school_studies_show', {'id': study.id, school_id: study.school.id }) }}">show</a>
                    <a href="{{ path('studies_edit', {'id': study.id, school_id: study.school.id }) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('studies_new', {school: school.id}) }}" class="btn btn-success">Create new</a>

{% else %}
    <br><br>
    <div class="col-12 col-sm-6 col-md-6">
        <div class="info-box mb-3 overflow-box">
        <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-hourglass-start"></i></span>

            <div class="info-box-nopage info-box-content">
                <span class="info-box-text">Votre compte doit etre comfirme pour vous permettre de poster des annonces</span>            
            </div>
            
        </div>
    </div> 
{% endif %}

{% endblock %}
