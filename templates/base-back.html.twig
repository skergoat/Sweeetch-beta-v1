<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %} Sweeetch {% endblock %}</title>

        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="" name="keywords">
        <meta content="" name="@">
        
        <!-- fontawesome provisoire -->
        <script src="https://kit.fontawesome.com/1596c4b58a.js" crossorigin="anonymous"></script>

        <!-- Favicons -->
        <link href="{{ asset('build/favicon.png') }}" rel="icon">
        <link href="{{ asset('build/apple-touch-icon.png') }}" rel="apple-touch-icon">

        {% block stylesheets %}
        
            <!-- Google Fonts -->
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,600,700,700i|Montserrat:300,400,500,600,700" rel="stylesheet">
      
            <!-- bootstrap and custom styles -->    
            {{ encore_entry_link_tags('back') }}
 
        {% endblock %}

    </head>
    <body>

        <div class="wrapper">

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                    </li>
                    {# <li class="nav-item d-none d-sm-inline-block">
                        <a href="{{ path('admin') }}" class="nav-link">Dashboard</a>
                    </li> #}
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="/logout" class="nav-link">Deconnexion</a>
                    </li>
                </ul>

            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="{{ path('homepage') }}" class="brand-link">
                    <img src="{{ asset('build/favicon.png') }}" alt="AdminLTE Logo" class="brand-image" style="opacity: .8">
                    <span class="brand-text font-weight-light">Sweeetch - Admin</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">

                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <!-- <div class="image">
                          <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div> -->
                        <div class="info">
                          <a href="{{ path('user_edit', {'id': app.user.id}) }}" class="d-block">{{ app.user.email }}</a>
                        </div>
                    </div>
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">

                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item has-treeview">
                                <a href="{{ path('admin') }}" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Tableau de Bord
                                    </p>
                                </a>
                            </li> 
                            <li class="nav-item">
                                <a href="{{ path('student_index') }}" class="nav-link">
                                    <i class="nav-icon fa fa-user-graduate"></i>
                                    <p>
                                        Etudiants 
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('company_index') }}" class="nav-link">
                                    <i class="nav-icon fa fa-industry"></i>
                                    <p>
                                        Entreprises 
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('school_index') }}" class="nav-link">
                                    <i class="nav-icon fa fa-university"></i>
                                    <p>
                                        Ecoles 
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item main-item">
                                <a href="{{ path('user_index') }}" class="nav-link">
                                    <i class="nav-icon fa fa-user-shield"></i>
                                    <p>
                                        Administrateurs
                                    </p>
                                </a>

                                {% if app.request.get('_route') == 'user_index' or app.request.get('_route') == 'user_new' or app.request.get('_route') == 'user_edit' %}

                                <li class="nav nav-tree">
                                  <li class="nav-item">
                                    <a href="{{ path('user_index') }}" class="nav-link">
                                      <i class="far fa-circle nav-icon"></i>
                                      <p>Tous</p>
                                    </a>
                                  </li>
                                  <li class="nav-item">
                                    <a href="{{ path('user_new') }}" class="nav-link">
                                      <i class="far fa-circle nav-icon"></i>
                                      <p>Nouveau</p>
                                    </a>
                                  </li>
                                </li>

                              {% endif %}

                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Main content -->
                <section class="content content-back">
                    {% block body %}{% endblock %}
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <footer class="main-footer">
                <strong>Sweeetch - Admin</strong>
                
                </div>
            </footer>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
            </div>
        <!-- scripts -->
        {% block javascripts %}
            {{ encore_entry_script_tags('back') }}
        {% endblock %}

    </body>
</html>
