{% extends 'base-back.html.twig' %}

{% block title %} {{ parent() }} - students {% endblock %}

{% block body %}
    <h1>Students</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.user.email }}</td>
                <td class="actions">
                    <div style="margin-right:20px;">
                        <a href="{{ path('student_show', {'id': student.id}) }}">show</a>
                        <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
                        {% if student.user.roles == 'ROLE_STUDENT' %}
                            {{ include('back/_confirm_form.html.twig') }}
                        {% else %}
                            <a href="">Pobleme</a>
                        {% endif %}
                    </div>
                    {{ include('student/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
