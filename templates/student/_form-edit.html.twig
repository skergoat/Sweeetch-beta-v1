{{ form_start(form) }}

<div class="row">

    <div class="col-lg-6">
        <div class="form-group">
           {{ form_row(form.user.email, {'attr' : { class: 'form-control' }} ) }}
        </div>        
        <div class="form-group">
            {{ form_row(form.name, {'label': 'Prénom', 'attr' : { class: 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_row(form.lastname, {'label': 'Nom', 'attr' : { class: 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_row(form.adress, {'label': 'Adresse', 'attr' : { class: 'form-control' }} ) }}
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            {{ form_row(form.zipCode, {'label': 'Code Postal', 'attr' : { class: 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_row(form.city, {'label': 'Ville', 'attr' : { class: 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_row(form.telNumber, {'label': 'Numéro de Téléphone', 'attr' : { class: 'form-control' }} ) }}
        </div>
        <div class="row" id="row-radio">
            <div class="col-lg-6 form-group">
                {{ form_row(form.driving_license, {'label': 'Permis de Conduire', 'attr' : { class: 'form-control' }} ) }}
            </div>
            <div class="col-lg-6 form-group">
                {{ form_row(form.disabled, {'label': 'Handicap', 'attr' : { class: 'form-control' }} ) }}
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <button class="btn btn-primary">Mettre à jour</button>
    </div>  

</div>

{{ form_end(form) }}
