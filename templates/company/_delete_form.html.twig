<form method="post" class="{{ app.request.get('_route') == 'company_index' or app.request.get('_route') == 'admin'  ? 'form-icon' : '' }}" action="{{ app.request.get('_route') == 'admin' ? path('company_delete', {'id': company.company.id, 'from':'admin'}) : path('company_delete', {'id': company.id, 'from':'company_index'})  }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ app.request.get('_route') == 'admin' ? csrf_token('delete' ~ company.company.id) : csrf_token('delete' ~ company.id) }}">
    <button class="btn-icon btn-danger">
        {{ app.request.get('_route') == 'company_index' or app.request.get('_route') == 'admin' ? '<i class="far fa-trash-alt" title="supprimer"></i>' : 'Modifier' }}
    </button>
</form>
