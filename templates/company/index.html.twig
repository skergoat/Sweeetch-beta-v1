{% extends 'base-back.html.twig' %}

{% block title %} {{ parent() }} - entreprises {% endblock %}

{% block body %}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6 container-flex">
                <h1 class="m-0 text-dark">Entreprises</h1>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table m-0">
          <thead>
            <tr>
                <th>Ecole</th>
                <th>Siret</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for company in companies %}
            <tr>
                <td><strong><a href="{{ path('company_show', {'id': company.id}) }}" >{{ company.companyName }}</a></strong></td>
                <td><strong>{{ company.siret }}</strong></td>
                <td>{{ company.address }}, {{ company.zipCode }} {{ company.city }} </td>
                <td class="table-actions">
                  <div>
                  {% if company.user.roles == ['ROLE_COMPANY'] %}
                  <form method="post" class="form-icon" action="{{ path('admin_confirm', {'id': company.user.id}) }}" onsubmit="return confirm('Are you sure you want to confirm this user ?');">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.user.id) }}">
                      <button class="btn-icon btn-success"><i class="fas fa-check" title="confirmer le compte"></i></button>
                  </form>
                  {% endif %}
                   <div class="btn-icon-form">
                        <a href="">
                            <i class="fas fa-exclamation-circle warning" title="signaler un probleme" data-url="{{ company.user.id }}"></i>
                        </a>
                    </div> 
                    {{ include('company/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{{ include('back/_warning_form.html.twig') }}

{% endblock %}
