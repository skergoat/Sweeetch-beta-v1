    <div class="row card-margin">

        <div class="col-lg-6" >

            <!-- <h3>Infos du compte</h3><br> -->
            <div class="card col-lg-" style="padding:0px;">

                <div class="cardRed card-header-color card-header border-transparent">
                    <p class="card-title">Infos du compte</p>
    
                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                      </button>
                    </div>
                </div>
                
                <div class="card-body p-0 card-dashboard">
                    <div class="table-padding table-responsive">
                        <table class="table m-0">
                            <tbody>
                                <tr>
                                    <th>Entreprise</th>
                                    <td>{{ company.companyName }}</td>
                                </tr>
                                <tr>
                                    <th>Prénom</th>
                                    <td>{{ company.firstname }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ company.lastname }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse</th>
                                    <td>{{ company.address }}</td>
                                </tr>
                                <tr>
                                    <th>Code Postal</th>
                                    <td>{{ company.zipCode }}</td>
                                </tr>
                                <tr>
                                    <th>Ville</th>
                                    <td>{{ company.city }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone</th>
                                    <td>{{ company.telNumber }}</td>
                                </tr>
                                <tr>
                                    <th>Siret</th>
                                    <td>{{ company.siret }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        
        </div>
    </div>

