                            </a>
                        </p>

                        <div class="card-tools">
                          <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus" style="color:#8e8e8e;"></i>
                          </button>
                        </div>
                    </div>
            
                    <div class="card-body" >
                        <table id="dash4" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Annonces</th>
                                    <th>Etat du Recrutement</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for finished in finished %}
    
                                <tr class="border-top">
                                    <td><a href="{{ path('show_finished', {id:finished.offers.id, company:company.id}) }}" class="action-link">{{ finished.offers.title }}</a></td>
                                    <td>
                                        <span class="badge badge-success right">Recruté</span>
                                    </td>   
                                </tr>  
                                {% endfor %} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

