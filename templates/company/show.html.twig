                            <thead>
                                <tr>
                                    <th>Annonces</th>
                                    <th>Etat du Recrutement</th>
                                </tr>
                            </thead>
                            <tbody>
                                {# {% for finished in finished %}
    
                                <tr class="border-top">
                                    <td><a href="{{ path('show_finished', {id:finished.offers.id, company:company.id}) }}" class="action-link">{{ finished.offers.title }}</a></td>
                                    <td>
                                        <span class="badge badge-success right">Recruté</span>
                                    </td>   
                                </tr>  
                                {% endfor %}  #}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="col-lg-6">

            <div class="card col-lg-" id="card-1" style="padding:0px;">

                <div class="card-header-color card-header border-transparent" style="background:rgba(0,0,0,.03);">
                    
                    <p class="card-title" style="color:#4c4c4c !important;font-weight:900;">
                        Infos du compte
                        <a href="#info-3" rel="modal:open" class="badge " title="aide" style="margin-left:5px;color:#8e8e8e;">
                        <i class="fas fa-question-circle"></i>
                        </a>
                    </p>

                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus" style="color:#8e8e8e;"></i>
                      </button>
                    </div>
                </div>
                
                <div class="card-body p-0 card-dashboard">
                    <div class="table-padding table-responsive">
                        <table class="table m-0">
                            <tbody>
                                <tr>
                                    <th>Entreprise</th>
                                    <td>{{ company.companyName }}</td>
                                </tr>
                                <tr>
                                    <th>Prénom</th>
                                    <td>{{ company.firstname }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ company.lastname }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse</th>
                                    <td>{{ company.address }}</td>
                                </tr>
                                <tr>
                                    <th>Code Postal</th>
                                    <td>{{ company.zipCode }}</td>
                                </tr>
                                <tr>
                                    <th>Ville</th>
                                    <td>{{ company.city }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone</th>
                                    <td>{{ company.telNumber }}</td>
                                </tr>
                                <tr>
                                    <th>Siret</th>
                                    <td>{{ company.siret }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">

        <div class="col-lg-6">

            <div class="card" style="padding:0px;">

                <div class="card-header-color card-header border-transparent" style="background:rgba(0,0,0,.03);">
                    
                    <p class="card-title" style="color:#4c4c4c !important;font-weight:900;">
                        En Attente d'Acceptation
                        <a href="#info-4" rel="modal:open" class="badge " title="aide" style="margin-left:5px;color:#8e8e8e;">
                        <i class="fas fa-question-circle"></i>
                        </a>
                    </p>

                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus" style="color:#8e8e8e;"></i>
                      </button>
                    </div>
                </div>

                <div class="card-body">
                    <table id="dash3" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Annonces</th>
                                <th>Etat du Recrutement</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for applies in applies %}

                            <tr class="border-top">
                                <td><a href="{{ path('offers_preview', {id:applies.offers.id, company:company.id}) }}" class="action-link">{{ applies.offers.title }}</a></td>
                                <td>
                                    {% if applies.hired == true %}
                                    <span class="badge badge-warning right">En attente d'acceptation</span>
                                    {% elseif applies.agree == true %}
                                    <span class="badge badge-warning right">ouvert</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %} 
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="col-lg-6">

            <div class="col-lg- table-scroll">

                <div class="card" style="padding:0px;">

                    <div class="card-header-color card-header border-transparent" style="background:rgba(0,0,0,.03);">
                        
                        <p class="card-title" style="color:#4c4c4c !important;font-weight:900;">
                            Recrutements terminés
                            <a href="#info-5" rel="modal:open" class="badge " title="aide" style="margin-left:5px;color:#8e8e8e;">
